{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/prefer-default-export": "off",
        "import/extensions": "off"
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".d.ts", ".jsx", ".ts", ".tsx"]
          }
        }
    }
}
